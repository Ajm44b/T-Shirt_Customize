<div class="title_block">Image</div>
<div class="block_content">
    <div style="float: left; width: 100%; margin-top: 8px;">
        <label class="tools-fixd-tab-back-label" style="width:auto;line-height:42px;">Flip</label>
                <span style="float:right;cursor:pointer;">
                    <a href="#" class="vert-flip-image"><img width="49" height="44" alt="" src="modules/customdecal/img/flip-vert.png"></a>
                </span>
                <span style="float:right;cursor:pointer;margin-right:8px;">
                    <a href="#" class="hori-flip-image"><img width="49" height="44" alt="" src="modules/customdecal/img/flip-horz.png"></a>
                </span>
    </div>
    <div style="width:100%;margin-top:12px;" class="span-container">
        <div class="span-container">
            <label class="tools-fixd-tab-back-label img-label">Rotation</label>
            <span class="span-row">
                <input type="text" id="rotate_value" class="slider_value" value="0">
                <div id="ImageRotationSlider" class="img_slider"></div>
            </span>
        </div>
        <div class="span-container">
            <label class="tools-fixd-tab-back-label img-label">Opacity</label>
            <span class="span-row">
                <input type="text" id="opacity_value" class="slider_value" value="10">
                <div id="ImageOpacitySlider" class="img_slider"></div>
            </span>
        </div>
        <div class="span-container">
            <label class="tools-fixd-tab-back-label img-label">Width</label>
            <span class="span-row">
                <input type="text" id="width_value" class="slider_value" value="100">
                <div id="ImageWidthSlider" class="img_slider"></div>
            </span>
        </div>
        <div class="span-container">
            <label class="tools-fixd-tab-back-label img-label">Height</label>
            <span class="span-row">
                <input type="text" id="height_value" class="slider_value" value="100">
                <div id="ImageHeightSlider" class="img_slider"></div>
            </span>
        </div>
        <div class="span-container">
            <label class="tools-fixd-tab-back-label img-label">Size</label>
            <span class="span-row">
                <input type="text" id="size_value" class="slider_value" value="0">
                <div id="ImageSizeSlider" class="img_slider"></div>
            </span>
        </div>
    </div>
    <div style="float:left;width:100%;">
        <div style="width:50%;" class="span-container xupper">
            <label style="width:auto;line-height:22px;margin-right:4px;" class="tools-fixd-tab-back-label">X pos</label>
            <input value="0" name="value" id="spinner-I">
        </div>
        <div style="width:50%;" class="span-container">
            <label style="width:auto;line-height:22px;margin-right:4px;" class="tools-fixd-tab-back-label">Y pos</label>
            <input value="0" name="value" id="spinner-J">
        </div>
    </div>
    <div class="span-container">
        <input type="button" class="span-container-button-style image-center" value="Center">
    </div>
</div>
